{%  extends 'MargaretBundle::main.html.twig' %}

{% block content %}
    <article class="content text-center">
        <h3>List of Previous Aplications.</h3>

    </article>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
              <th>Date</th>
              <th>Name</th>
              <th>Amount</th>
              <th>Options</th>
            </tr>
        </thead>

        <tbody>
        {% for forms in listForms %}
          <tr data-id="{{forms.id}}">
            <td>{{forms.date|date('Y-F-d h:m:s')}}</td>
            <td>{{forms.name}}</td>
            <td>{{forms.amount}}</td>
            <td>
                <a class="btn btn-primary" href="/editAplication/{{forms.id}}">See more / Edit</a>
                <button class="btn btn-danger" data-toggle="modal" data-target="#modal-sure-delete" data-whatever="{{forms.id}}">Delete</button>
            </td>
          </tr>

        {% endfor %}
        </tbody>

        <tfooter>
            <tr>
              <th>Date</th>
              <th>Name</th>
              <th>Amount</th>
              <th>Options</th>
            </tr>
        </tfooter>

    </table>










{%  endblock %}
