  <style media="screen">
    #logo-name,
    #logo-name-m {
      font-family: 'Open Sans', sans-serif;
      color: #fff;
    }

    #logo-name-m {
      float: left;
    }

    #logo-flower {
      width: 50px;
      position: relative;
      right: 100px;
      top: -75px;
    }

    #logo-flower-m {
      width: 20px;
      position: relative;
      right: 33px;
      top: 13px;
    }

    #gdpr-block{
      margin-bottom: 50px;
    }

    @media screen and (max-width: 768px) {
      /* For Tablets: */
      .top {
        margin-top: 0px !important;
      }
      .navbar {
        margin-bottom: 10px;
      }
    }
  </style>

  <!-- Global site tag (gtag.js) - Google Analytics -->
